{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":assignee(Eviive)",
    ":automergePatch",
    ":disableRateLimiting",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    "mergeConfidence:all-badges"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^.*deployment\\.yaml$/",
      "/^.*cronjob\\.yaml$/"
    ]
  }
}
