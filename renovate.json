{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    "mergeConfidence:all-badges"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^.*deployment\\.yaml$/",
      "/^.*cronjob\\.yaml$/"
    ]
  }
}
