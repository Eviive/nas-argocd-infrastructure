{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":assignee(Eviive)",
    ":automergePatch",
    ":disableRateLimiting",
    ":separateMultipleMajorReleases",
    "mergeConfidence:all-badges",
    "security:openssf-scorecard"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^.*deployment\\.yaml$/",
      "/^.*cronjob\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchDepTypes": [
        "HelmChart"
      ],
      "matchPackageNames": [
        "registry-1.docker.io/bitnamicharts/postgresql"
      ],
      "pinDigests": false
    }
  ],
  "ignoreDeps": [
    "alexfozor/flaresolverr"
  ]
}
